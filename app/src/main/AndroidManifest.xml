<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanvir.to_letapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".activity.DetailsActivity" />
        <activity android:name=".activity.DefaultRegisterActivity" />
        <activity android:name=".activity.DefaultLoginActivity" />
        <activity android:name=".activity.renterActivity.RenterMainActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".activity.ownerActivity.OwnerMainActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".activity.ownerActivity.PostActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ownerActivity.OwnerUpdateActivity"></activity>
        <activity android:name=".activity.renterActivity.RenterUpdateActivity"></activity>
    </application>

</manifest>