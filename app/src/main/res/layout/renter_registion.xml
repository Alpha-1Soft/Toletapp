<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_withd="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/renternameET"
        android:hint="Enter Your Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="18dp"/>
   <EditText
       android:id="@+id/renterPhoneEt"
       android:hint="Enter Your Phone Number"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/renteremail"
        android:hint="Enter Your Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="18dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/renterusername"
        android:hint="Your User Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password "
        android:textSize="18dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/renterpassword"
        android:hint="Enter Your Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="18dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/renterconfirmpassword"
        android:hint="Enter Your Confirm Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:onClick="register"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>