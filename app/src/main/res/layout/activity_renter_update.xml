<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.renterActivity.RenterUpdateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button

            android:onClick="rentercancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#067b39"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#000"/>
        <Button

            android:onClick="renterSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="#067b39"
            android:layout_weight="1"
            android:text="Save"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#000"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:background="#0959da"
                >
                <ImageView
                    android:id="@+id/renterProfileImg"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/renterprofile"
                    android:layout_marginLeft="30dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        android:text="Name"
                        android:textSize="20sp"
                        android:textColor="#000"/>

                    <EditText
                        android:id="@+id/renterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:text="Omar Faruk"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/renterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="omar.faruq1998V@gmail.com"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/renterPhoneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01747477690"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/renterAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mirpur-14"
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/renterAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Profession"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/renterProfession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Income"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/renterIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20000 To 25000"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marital Satus"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <Spinner
                    android:id="@+id/renterMaritalsatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Religion"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <Spinner
                    android:id="@+id/renterreligionSp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/renternatinality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bangladeshi"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>