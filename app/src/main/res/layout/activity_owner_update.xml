<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ownerActivity.OwnerUpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#000"
            android:textSize="20dp"
            android:textAllCaps="false"/>
        <Button
            android:onClick="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#000"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center"
                android:background="#03396c"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wonerProfileImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/renterprofile"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ownerNameUp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Name"
                            android:inputType="text"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="20dp"
                            android:padding="5dp"
                            />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ownerPhoneNumberUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ownerAddressUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Address"
                        android:inputType="text"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ownerAgeUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Age"
                        android:inputType="number"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relagion"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/ownerRelationUp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"

                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>